<p id="notice"><%= notice %></p>

<h1>Listing Amertumes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amertumes.each do |amertume| %>
      <tr>
        <td><%= amertume.title %></td>
        <td><%= amertume.content %></td>
        <td><%= amertume.user_id %></td>
        <td><%= link_to 'Show', amertume %></td>
        <td><%= link_to 'Edit', edit_amertume_path(amertume) %></td>
        <td><%= link_to 'Destroy', amertume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

